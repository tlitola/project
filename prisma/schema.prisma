// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  fist_name    String?
  last_name    String?
  password     String
  keys         AuthKey[]
}

model AuthKey{
  user         User @relation(fields: [userId], references: [id])
  userId       Int @unique
  primaryKey   String
  secondaryKey String
  status       Boolean?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

}

model ApiKey{
  key          String @unique
  version      Int
  data         String?
  status       Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}